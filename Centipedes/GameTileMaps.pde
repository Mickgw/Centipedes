int strokeColor = 0;

void drawTileMap(int x, int y, int tileSize) {
  int[][] gameTileMap = getGameTileMap();
  
  for (int row = 0; row < gameTileMap.length; row++) {
    for (int colomn = 0; colomn < gameTileMap[row].length; colomn++) {
      fill(BACKGROUND_COLOR);
      stroke(strokeColor);
      strokeWeight(1);
      rect(x + (colomn * tileSize), y + (row * tileSize), tileSize, tileSize);
    }
  }
}

void setGameTileMap(int[][] map) {
  switch (tileMap) {
  case 0: 
    gameTileMap1 = map;
    break;
  case 1: 
    gameTileMap2 = map;
    break;
  case 2: 
    gameTileMap3 = map;
    break;
  case 3: 
    gameTileMap4 = map;
    break; 
  case 4: 
    gameTileMap5 = map;
    break;
  }
}

int[][] getGameTileMap() {
  switch (tileMap) {
  case 0: 
    return gameTileMap1;
  case 1: 
    return gameTileMap2;
  case 2: 
    return gameTileMap3;
  case 3: 
    return gameTileMap4; 
  case 4: 
    return gameTileMap5;
  }  
  return gameTileMap1;
}

int gameTileMapLayout(int[] tileMapLayout) {
  if (tileMapLayout == TILEOPTIONS[1]) {
    return 1;
  } else if (tileMapLayout == TILEOPTIONS[2]) {
    return 2;
  } else if (tileMapLayout == TILEOPTIONS[3]) {
    return 3;
  } else if (tileMapLayout == TILEOPTIONS[4]) {
    return 4;
  } else {
    return 0;
  }
}

