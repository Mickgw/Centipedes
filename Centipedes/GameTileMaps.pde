int[] getButtonXpos_Ypos() {
  int x = width / 2 - (TEXTMARGINRIGHT);
  int y = height / 4;
  int[] coordinates = new int[2];

  coordinates[0] = x - BUTTONPROPERTIES[3] - (BUTTONPROPERTIES[3] / 3);
  coordinates[1] = y + (BUTTONPROPERTIES[4] / 2 + BUTTONTOTEXTMARGIN) + TEXTMARGINTOP * 2;

  return coordinates;
} 

void drawSizeOption(int x, int y) {
  int fontSizeButton = 30;

  drawText(x, y, "Grootte speelveld: ", FONTSIZE, TEXTMARGINRIGHT, FONTCOLOR); 

  for (int i = 0; i < TILEOPTIONS.length; i++) {
    if (tileMap == gameTileMapLayout(TILEOPTIONS[i])) {
      drawButton(str(TILEOPTIONS[i][0]) + " x " + str(TILEOPTIONS[i][1]), getButtonXpos_Ypos()[0] + (i * BUTTONPROPERTIES[3]), getButtonXpos_Ypos()[1], BUTTONPROPERTIES[3], BUTTONPROPERTIES[4], #00FF00, fontSizeButton, false);
    } else {
      drawButton(str(TILEOPTIONS[i][0]) + " x " + str(TILEOPTIONS[i][1]), getButtonXpos_Ypos()[0] + (i * BUTTONPROPERTIES[3]), getButtonXpos_Ypos()[1], BUTTONPROPERTIES[3], BUTTONPROPERTIES[4], #FFFFFF, fontSizeButton, false);
    }
  }
}

void sizeOptionPressed() {

  for (int i = 0; i < TILEOPTIONS.length; i++) {
    if (mouseX >= getButtonXpos_Ypos()[0] + BUTTONPROPERTIES[3] * i && mouseX <= getButtonXpos_Ypos()[0] + BUTTONPROPERTIES[3] + (i * BUTTONPROPERTIES[3]) && mouseY >= getButtonXpos_Ypos()[1] && mouseY <= getButtonXpos_Ypos()[1] + BUTTONPROPERTIES[4]) {
      tileMap = gameTileMapLayout(TILEOPTIONS[i]);
      println(i);
    }
  }
}
